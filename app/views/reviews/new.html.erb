<div class="border-bottom border-weight-2 my-3">
<h1 class="mb-3">Add a review</h1>
</div>
<div class="d-flex flex-column row">

<%= simple_form_for([@restaurant, @review]) do |f| %>
  <%= f.input :content, wrapper_html: { class: 'col-6' } %>
  <%= f.input :rating, wrapper_html: { class: 'col-6' } %>
  <%= f.submit %>
<% end %>

</div>
